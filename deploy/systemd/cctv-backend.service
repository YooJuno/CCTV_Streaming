[Unit]
Description=CCTV Streaming Backend (Spring Boot)
After=network.target

[Service]
Type=simple
WorkingDirectory={{PROJECT_ROOT}}/apps/backend
EnvironmentFile=-%h/.config/cctv-streaming/backend.env
ExecStart=/usr/bin/env bash -lc 'cd {{PROJECT_ROOT}}/apps/backend && ./gradlew bootRun --no-daemon'
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
