[Unit]
Description=CCTV Dummy Stream Source (video.mp4 -> MJPEG -> HLS)
After=network.target cctv-backend.service

[Service]
Type=simple
WorkingDirectory={{PROJECT_ROOT}}
EnvironmentFile=-%h/.config/cctv-streaming/dummy.env
ExecStart=/usr/bin/env bash -lc 'cd {{PROJECT_ROOT}} && ./apps/cctv/test/run_test_stream.sh'
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
